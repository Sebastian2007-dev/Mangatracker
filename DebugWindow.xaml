<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="MangaTracker.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug-Log"
        Height="520" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        FontFamily="Consolas">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,6">
            <Button Content="Rescan" Margin="0,0,8,0" Click="Rescan_Click"/>
            <Button Content="Copy" Margin="0,0,8,0" Click="Copy_Click"/>
            <Button Content="Clear" Click="Clear_Click"/>
        </StackPanel>

        <!-- Log -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <ScrollViewer x:Name="Scroller" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="LogList" ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Hint -->
        <TextBlock Grid.Row="2" Margin="0,6,0,0" Opacity="0.75" FontSize="12"
                   Text="Tip: All Debug.WriteLine outputs appear here automatically."/>
    </Grid>
</Window>
