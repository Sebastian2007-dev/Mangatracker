<Window x:Class="MangaTracker.OpenLinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Link öffnen"
        Height="200"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Welchen Link möchtest du öffnen?" 
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"/>

            <Button x:Name="OpenChapterButton" Content="Kapitel-Link öffnen" Margin="0,0,0,5" Height="35" Click="OpenChapter_Click"/>
            <Button x:Name="OpenMainButton" Content="Hauptseite öffnen" Margin="0,0,0,5" Height="35" Click="OpenMain_Click"/>
            <Button Content="Abbrechen" Height="30" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
