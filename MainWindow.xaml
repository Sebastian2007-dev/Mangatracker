<Window
    x:Class="MangaTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Manga Tracker"
    Height="700"
    Width="1000"
    Background="{DynamicResource WindowBackgroundBrush}"
    Foreground="{DynamicResource TextBrush}"
    UseLayoutRounding="True">
    <!-- << verhindert pixeliges Clipping -->

    <!-- ================= Resources ================= -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Typo -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- Mini-Icon-Buttons -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Kapitel-Textbox -->
        <Style x:Key="ChapterBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="56"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Spinner-Buttons -->
        <Style x:Key="SpinRepeatButton" TargetType="RepeatButton">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ItemSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NEU-Badge -->
        <Style x:Key="NewChapterBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Background" Value="{DynamicResource ItemSelectedBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <!-- ================= Layout ================= -->
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Topbar -->
        <Border Grid.Row="0" Padding="10" Style="{StaticResource CardHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Links -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Manga Tracker" Style="{StaticResource H1}" Margin="0,0,12,0"/>
                    <Separator Width="1" Height="20" Opacity="0.3" Margin="4,0,12,0"/>
                    <TextBox x:Name="SearchBox"
                             Width="260"
                             VerticalAlignment="Center"
                             ToolTip="Nach Titel suchen"
                             Margin="0,0,12,0"
                             TextChanged="SearchBox_TextChanged"/>
                    <ComboBox x:Name="ThemeSelector"
                              Width="130"
                              VerticalAlignment="Center"
                              SelectionChanged="ThemeSelector_SelectionChanged">
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="System"/>
                    </ComboBox>
                </StackPanel>

                <!-- Rechts -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Exportieren" Click="ExportButton_Click"/>
                    <Button Content="Importieren" Click="ImportButton_Click"/>
                    <Button Content="⚙️" Width="40" Click="SettingsButton_Click" ToolTip="Einstellungen"/>
                    <Menu Margin="6,0,0,0" VerticalAlignment="Center">
                        <MenuItem Header="_Hilfe">
                            <MenuItem Header="Hilfe &amp; Funktionen (F1)" Click="OpenHelp_Click" InputGestureText="F1"/>
                            <Separator/>
                            <MenuItem Header="Debug-Ausgaben" Click="OpenDebug_Click" InputGestureText="F12"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Eingabe -->
        <Border Grid.Row="1" Margin="0,10,0,10" Style="{StaticResource Card}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Neuen Manga hinzufügen" Style="{StaticResource H2}" Margin="0,0,0,8"/>
                    <TextBlock Text="Titel"/>
                    <TextBox x:Name="TitleBox"/>

                    <TextBlock Text="URL"/>
                    <TextBox x:Name="UrlBox"/>

                    <TextBlock Text="Kapitel-URL (Template mit $chapter)"/>
                    <TextBox x:Name="ChapterUrlBox"/>

                    <TextBlock Text="Status"/>
                    <ComboBox x:Name="StatusBox" Margin="0,2,0,0">
                        <ComboBoxItem Content="Reading" IsSelected="True"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Rereading"/>
                        <ComboBoxItem Content="Hiatus"/>
                        <ComboBoxItem Content="Plan to Read"/>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Hinzufügen"
                        Click="AddManga_Click"
                        Height="40"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- Tabs + Liste -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tabs -->
            <TabControl x:Name="StatusTabs" Grid.Row="0" SelectionChanged="StatusTabs_SelectionChanged">
                <TabItem Header="Alle"         Tag="All"/>
                <TabItem Header="Reading"      Tag="Reading"/>
                <TabItem Header="Completed"    Tag="Completed"/>
                <TabItem Header="Hiatus"       Tag="Hiatus"/>
                <TabItem Header="Rereading"    Tag="Rereading"/>
                <TabItem Header="Plan to Read" Tag="Plan to Read"/>
            </TabControl>

            <!-- Manga-Liste -->
            <Border Grid.Row="1" Style="{StaticResource Card}" Padding="0" ClipToBounds="False">
                <ListBox x:Name="MangaList"
                         HorizontalContentAlignment="Stretch"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"
                         Padding="0,0,24,0" 
                    SnapsToDevicePixels="True"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         VirtualizingPanel.ScrollUnit="Pixel">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="MinHeight" Value="44"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    Padding="8,6,28,6"
                                SnapsToDevicePixels="True"
                                    ClipToBounds="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="96"/>
                                        <!-- Kapitel -->
                                        <ColumnDefinition Width="150"/>
                                        <!-- Status -->
                                        <ColumnDefinition Width="40"/>
                                        <!-- 🌐 -->
                                        <ColumnDefinition Width="40"/>
                                        <!-- 🗑️ -->
                                        <ColumnDefinition Width="40"/>
                                        <!-- ✏️ -->
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Titel + Badge -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                        <Border Style="{StaticResource NewChapterBadge}"
                                                Margin="8,0,0,0"
                                                Visibility="{Binding HasNewChapter, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="NEU" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- URL -->
                                    <TextBlock Grid.Column="0" Grid.Row="1"
                                               Text="{Binding Url}"
                                               Foreground="{DynamicResource DisabledTextBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Kapitel + Spinner -->
                                    <Grid Grid.Column="1" Grid.RowSpan="2" Margin="8,0" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Style="{StaticResource ChapterBox}"
                                                 Text="{Binding Chapter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Grid Grid.Column="1" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- UP -->
                                            <RepeatButton Grid.Row="0"
                                                          Style="{StaticResource SpinRepeatButton}"
                                                          Click="ChapterUp_Click"
                                                          Tag="{Binding}">
                                                <Path Width="8" Height="6" Stretch="Fill"
                                                      Data="M 0 6 L 4 2 L 8 6 Z"
                                                      Fill="{DynamicResource TextBrush}"/>
                                            </RepeatButton>

                                            <!-- DOWN -->
                                            <RepeatButton Grid.Row="1"
                                                          Style="{StaticResource SpinRepeatButton}"
                                                          Click="ChapterDown_Click"
                                                          Tag="{Binding}">
                                                <Path Width="8" Height="6" Stretch="Fill"
                                                      Data="M 0 2 L 4 6 L 8 2 Z"
                                                      Fill="{DynamicResource TextBrush}"/>
                                            </RepeatButton>
                                        </Grid>
                                    </Grid>

                                    <!-- Status -->
                                    <ComboBox Grid.Column="2" Grid.RowSpan="2"
                                              VerticalAlignment="Center"
                                              SelectedValue="{Binding Status, Mode=TwoWay}"
                                              SelectedValuePath="Content">
                                        <ComboBoxItem Content="Reading"/>
                                        <ComboBoxItem Content="Completed"/>
                                        <ComboBoxItem Content="Rereading"/>
                                        <ComboBoxItem Content="Hiatus"/>
                                        <ComboBoxItem Content="Plan to Read"/>
                                    </ComboBox>

                                    <!-- Aktionen -->
                                    <Button Grid.Column="3" Grid.RowSpan="2" Content="🌐" Style="{StaticResource IconButton}"
                                            Margin="0,0,6,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Click="OpenLink_Inline_Click" Tag="{Binding}" ToolTip="Öffnen"/>
                                    <Button Grid.Column="4" Grid.RowSpan="2" Content="🗑️" Style="{StaticResource IconButton}"
                                            Margin="0,0,6,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Click="DeleteInline_Click" Tag="{Binding}" ToolTip="Löschen"/>
                                    <Button Grid.Column="5" Grid.RowSpan="2" Content="✏️" Style="{StaticResource IconButton}"
                                            Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Click="EditInline_Click" Tag="{Binding}" ToolTip="Bearbeiten"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <!-- Undo -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="UndoButton"
                    Content="Löschen rückgängig machen"
                    Click="UndoDelete_Click"/>
        </StackPanel>
    </Grid>

    <!-- F1 -->
    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{x:Static ApplicationCommands.Help}"/>
        <KeyBinding Key="F12" Command="{x:Static ApplicationCommands.Properties}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Help}" Executed="OpenHelp_Click"/>
        <CommandBinding Command="{x:Static ApplicationCommands.Properties}" Executed="OpenDebug_Click"/>
    </Window.CommandBindings>

</Window>
