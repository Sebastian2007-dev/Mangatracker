<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="WindowBackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="TextColor">#FFF0F0F0</Color>
    <Color x:Key="ControlBackgroundColor">#FF2A2A2A</Color>
    <Color x:Key="BorderColor">#FF666666</Color>
    <Color x:Key="ButtonColor">#FF3A3A3A</Color>
    <Color x:Key="ButtonHoverColor">#FF4A4A4A</Color>
    <Color x:Key="ItemHoverColor">#FF404040</Color>
    <Color x:Key="ItemSelectedColor">#FF383C45</Color>
    <Color x:Key="AccentColor">#FF4C8BF5</Color>

    <!-- Tabs -->
    <Color x:Key="TabBackgroundColor">#FF2A2A2A</Color>
    <Color x:Key="TabHoverColor">#FF3A3A3A</Color>
    <Color x:Key="TabSelectedColor">#FF3F3F3F</Color>
    <Color x:Key="TabBorderColor">#FF555555</Color>
    <Color x:Key="DisabledTextColor">#FF888888</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush"              Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush"            Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ButtonBrush"            Color="{StaticResource ButtonColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush"       Color="{StaticResource ButtonHoverColor}"/>
    <SolidColorBrush x:Key="ItemHoverBrush"         Color="{StaticResource ItemHoverColor}"/>
    <SolidColorBrush x:Key="ItemSelectedBrush"      Color="{StaticResource ItemSelectedColor}"/>
    <SolidColorBrush x:Key="AccentBrush"            Color="{StaticResource AccentColor}"/>

    <SolidColorBrush x:Key="TabBackgroundBrush"     Color="{StaticResource TabBackgroundColor}"/>
    <SolidColorBrush x:Key="TabHoverBrush"          Color="{StaticResource TabHoverColor}"/>
    <SolidColorBrush x:Key="TabSelectedBrush"       Color="{StaticResource TabSelectedColor}"/>
    <SolidColorBrush x:Key="TabBorderBrush"         Color="{StaticResource TabBorderColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush"      Color="{StaticResource DisabledTextColor}"/>

    <!-- Card background (panels) -->
    <SolidColorBrush x:Key="CardBackgroundBrush"    Color="{StaticResource ControlBackgroundColor}"/>
    <!-- zusaetzliche Brushes -->
    <Color x:Key="InputBackgroundColor">#FF1F222A</Color>
    <!-- etwas dunkler als Control -->
    <Color x:Key="PanelHeaderColor">#FF242730</Color>
    <!-- Top-/Kartenkopf -->
    <Color x:Key="SeparatorColor">#FF3A3F49</Color>

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelHeaderBrush"     Color="{StaticResource PanelHeaderColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush"       Color="{StaticResource SeparatorColor}"/>

    <!-- Scrollbar (Dark) -->
    <Color x:Key="ScrollRailColor">#22262E</Color>
    <Color x:Key="ScrollThumbColor">#5B6B83</Color>
    <Color x:Key="ScrollThumbHoverColor">#6C7C94</Color>
    <Color x:Key="ScrollThumbPressedColor">#7C8BA3</Color>

    <SolidColorBrush x:Key="ScrollRailBrush" Color="{StaticResource ScrollRailColor}"/>
    <SolidColorBrush x:Key="ScrollThumbBrush" Color="{StaticResource ScrollThumbColor}"/>
    <SolidColorBrush x:Key="ScrollThumbHoverBrush" Color="{StaticResource ScrollThumbHoverColor}"/>
    <SolidColorBrush x:Key="ScrollThumbPressedBrush" Color="{StaticResource ScrollThumbPressedColor}"/>

</ResourceDictionary>
